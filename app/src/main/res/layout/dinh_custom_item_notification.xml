<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/dp10"
    android:background="@drawable/bg_shadown"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="@dimen/dp20"
        android:layout_gravity="center"
        android:src="@drawable/ic_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:padding="5dp"
            android:fontFamily="@font/rosario_bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Tên thông báo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingHorizontal="5dp"
            android:fontFamily="@font/rosario_medium"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Tên thông báo,tên thông báo,tên thông báo,tên thông báo,tên thông báo,tên thông báo,tên thông báo,tên thông báo,tên thông báo,"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>